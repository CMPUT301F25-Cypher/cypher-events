<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Top bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="40sp"
        android:layout_marginBottom="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvOrganizerTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Organizer Dashboard"
            android:textStyle="bold"
            android:textSize="28sp"
            android:fontFamily="sans-serif-thin"
            android:textColor="#000000"
            android:gravity="center_vertical" />

        <!-- Account Button -->
        <ImageButton
            android:id="@+id/btnAccount"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_account_circle"
            android:contentDescription="Entrant Dashboard"
            android:scaleType="centerInside"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Welcome message -->
    <TextView
        android:id="@+id/tvWelcomeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome,"
        android:textSize="26sp"
        android:textColor="#333333"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="40dp"
        android:textAlignment="viewStart" />

    <!-- Buttons row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="200dp"
        android:padding="8dp">

        <Button
            android:id="@+id/btnCreateEvent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Create Event"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:background="@drawable/rounded_button_minimal"
            android:layout_marginEnd="10dp"
            android:padding="10dp" />

        <Button
            android:id="@+id/btnMyEvents"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="My Events"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:background="@drawable/rounded_button_minimal"
            android:layout_marginStart="10dp"
            android:padding="10dp" />
    </LinearLayout>
</LinearLayout>
