<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sv_create_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/container_create_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 1) Event title -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_title"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/text_secondary">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/event_title_hint"
                android:textColor="@color/text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 2) Event description -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_description"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/text_secondary">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/event_description_hint"
                android:minLines="3"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:textColor="@color/text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 3) Location -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_location"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/text_secondary">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/location_hint"
                android:textColor="@color/text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 4) Contact field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_contact"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/text_secondary">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/contact_hint"
                android:inputType="textEmailAddress|phone"
                android:textColor="@color/text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 5) Registration period pickers -->
        <TextView
            android:id="@+id/tv_reg_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registration_period_label"
            android:textStyle="bold"
            android:textColor="@color/primary_dark"
            android:layout_marginTop="16dp" />

        <!-- action row (buttons that launch pickers) -->
        <LinearLayout
            android:id="@+id/row_reg_period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_reg_start"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/start_label"
                app:icon="@drawable/ic_calendar_24"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:strokeColor="@color/primary"
                app:iconTint="@color/primary"
                android:textColor="@color/primary" />

            <Space
                android:layout_width="12dp"
                android:layout_height="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_reg_end"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/end_label"
                app:icon="@drawable/ic_calendar_24"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:strokeColor="@color/primary"
                app:iconTint="@color/primary"
                android:textColor="@color/primary" />
        </LinearLayout>

        <!-- read-only displays for the chosen timestamps -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_reg_start"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/text_secondary"
            android:hint="@string/registration_opens">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_reg_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="false"
                android:inputType="none"
                android:contentDescription="@string/registration_opens"
                android:textColor="@color/text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_reg_end"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/text_secondary"
            android:hint="@string/registration_closes">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_reg_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="false"
                android:inputType="none"
                android:contentDescription="@string/registration_closes"
                android:textColor="@color/text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 6) Poster upload (image + buttons) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/nav_background"
            app:strokeColor="@color/primary"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/iv_poster"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_image_placeholder_24"
                    android:background="@color/nav_background"
                    android:contentDescription="@string/poster_image_cd" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_pick_poster"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:text="@string/pick_image"
                        android:textColor="@color/primary"
                        app:icon="@drawable/ic_image_24"
                        app:iconTint="@color/primary"
                        app:iconPadding="6dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_remove_poster"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:text="@string/remove"
                        android:textColor="@color/text_secondary"
                        app:icon="@drawable/ic_delete_24"
                        app:iconTint="@color/text_secondary"
                        app:iconPadding="6dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 7) Geolocation toggle (+ optional geofence settings) -->
        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_geolocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enable_geolocation"
            android:layout_marginTop="16dp"
            android:textColor="@color/text_primary" />

        <LinearLayout
            android:id="@+id/group_geofence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_geofence_radius"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:boxStrokeColor="@color/primary">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_geofence_radius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/geofence_radius_hint"
                    android:inputType="number"
                    android:textColor="@color/text_primary" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space
                android:layout_width="12dp"
                android:layout_height="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_pick_map"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pick_on_map"
                app:strokeColor="@color/primary"
                android:textColor="@color/primary"
                app:icon="@drawable/ic_place_24"
                app:iconTint="@color/primary"
                app:iconPadding="6dp" />
        </LinearLayout>

        <!-- 8) Waiting list limit toggle + input -->
        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_waitlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enable_waitlist"
            android:layout_marginTop="16dp"
            android:textColor="@color/text_primary" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_waitlist_limit"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:boxStrokeColor="@color/primary">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_waitlist_limit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/waitlist_limit_hint"
                android:inputType="number"
                android:textColor="@color/text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 9) Lottery sampling number -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_lottery_sample"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:boxStrokeColor="@color/primary">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_lottery_sample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/lottery_sample_hint"
                android:inputType="number"
                android:textColor="@color/text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 10) Generate QR + QR preview -->
        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_generate_qr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/generate_qr_after_creating"
            android:layout_marginTop="16dp"
            android:textColor="@color/text_primary" />

        <ImageView
            android:id="@+id/iv_qr_preview"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/qr_preview_cd"
            android:src="@drawable/ic_qr_placeholder_24"
            android:background="@color/nav_background"
            android:padding="12dp"
            android:visibility="gone" />

        <!-- 11) Create event + 12) Exit -->
        <LinearLayout
            android:id="@+id/row_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="24dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_exit"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/exit_label"
                app:strokeColor="@color/text_secondary"
                android:textColor="@color/text_secondary"
                app:icon="@drawable/ic_close_24"
                app:iconTint="@color/text_secondary"
                app:iconPadding="6dp" />

            <Space
                android:layout_width="12dp"
                android:layout_height="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_submit_event"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/create_event_label"
                app:icon="@drawable/ic_check_24"
                app:iconTint="@color/white"
                app:iconPadding="6dp"
                app:backgroundTint="@color/primary"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
