<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutEventManagement"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/background">

    <!-- Top bar -->
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvEventTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Manage Event"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/text_primary"
            android:letterSpacing="-0.02"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- Event description -->
    <TextView
        android:id="@+id/tvEventDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This event is about..."
        android:textSize="15sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="12dp" />

    <!-- Poster preview -->
    <ImageView
        android:id="@+id/imgEventPoster"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder_image_event"
        android:background="@drawable/rounded_border_light"
        android:contentDescription="Event poster" />

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <!-- Actions -->
    <Button
        android:id="@+id/btnGenerateQR"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="See QR Code"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button_minimal"
        android:elevation="0dp" />

    <Button
        android:id="@+id/btnUpdateEvent"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Update Event"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/text_primary"
        android:background="@drawable/bg_button_secondary"
        android:elevation="0dp"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/btnViewWaitingList"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="View Waiting List"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/text_primary"
        android:background="@drawable/bg_button_secondary"
        android:elevation="0dp"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/btnDrawWinner"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Draw Winner"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button_minimal"
        android:elevation="0dp"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/btnDrawReplacement"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Draw Replacement"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button_minimal"
        android:elevation="0dp"
        android:layout_marginTop="12dp" />

</LinearLayout>

