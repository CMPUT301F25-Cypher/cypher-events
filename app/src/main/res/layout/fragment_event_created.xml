<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:padding="24dp"
    tools:context=".ui.organizer.EventCreatedFragment">


    <LinearLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/EventCreatedTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event created"
            android:textSize="26sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/colorTextPrimary" />

        <TextView
            android:id="@+id/EventCreatedSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-light"
            android:text="Your event has been created successfully."
            android:textColor="@color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/EventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Community Coding Workshop" />

        <TextView
            android:id="@+id/EventDescript"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="A fun intro to Android development with live coding!" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="100dp" />


        <LinearLayout
            android:id="@+id/layoutQr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/accent_light"
            android:clipToPadding="false"
            android:elevation="2dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/EventQr"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/white"
                android:contentDescription="Event QR code"
                android:scaleType="fitCenter"
                tools:src="@drawable/ic_launcher_foreground" />


        </LinearLayout>


        <Button
            android:id="@+id/buttonViewEventDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/black"
            android:fontFamily="sans-serif-medium"
            android:padding="12dp"
            android:text="Manage Event"
            android:textAllCaps="false"
            android:textColor="@color/colorOnPrimary"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonReturnToDashboard"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/accent"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp"
        android:text="Return to organizer dashboard"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="14sp" />

</LinearLayout>


