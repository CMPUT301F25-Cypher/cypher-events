<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/Event_page"
        android:layout_width="353dp"
        android:layout_height="53dp"
        android:layout_marginStart="40dp"
        android:text="@string/event_page"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Event_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Event_page"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/Name_ev_page"
        android:layout_width="336dp"
        android:layout_height="59dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:text="@string/name_label"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Event_image" />

    <TextView
        android:id="@+id/Phone_ev"
        android:layout_width="336dp"
        android:layout_height="59dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="48dp"
        android:text="@string/phone_label"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Name_ev_page" />

    <TextView
        android:id="@+id/email_ev"
        android:layout_width="336dp"
        android:layout_height="59dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="48dp"
        android:text="@string/email_label"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Phone_ev" />


</androidx.constraintlayout.widget.ConstraintLayout>