<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Administrator Dashboard"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnBrowseEvents"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Browse Events"
        android:layout_marginBottom="12dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    <Button
        android:id="@+id/btnBrowseProfiles"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Browse Profiles"
        android:layout_marginBottom="12dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    <Button
        android:id="@+id/btnBrowseImages"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Browse Images"
        android:layout_marginBottom="12dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    <Button
        android:id="@+id/btnNotificationLogs"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Notification Logs"
        android:layout_marginBottom="12dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

</LinearLayout>