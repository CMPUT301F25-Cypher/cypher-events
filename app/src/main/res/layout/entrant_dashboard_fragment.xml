<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="20dp"
    tools:context=".ui.entrant.EntrantDashboardFragment">

    <!-- Top bar -->
    <LinearLayout
        android:id="@+id/layoutTopBarEntrant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnAdmin"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_button_secondary"
            android:contentDescription="Admin Dashboard"
            android:src="@drawable/ic_admin"
            android:scaleType="centerInside"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/tvEntrantTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dashboard"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/text_primary"
            android:letterSpacing="-0.02" />

        <ImageButton
            android:id="@+id/btnOrganizer"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_button_secondary"
            android:contentDescription="Organizer Dashboard"
            android:src="@drawable/ic_organizer"
            android:scaleType="centerInside"
            android:padding="10dp" />
    </LinearLayout>

    <!-- Main card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardEntrantActions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/surface"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@id/layoutTopBarEntrant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvWelcomeEntrant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome back!"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What would you like to do today?"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/buttonScanQr"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Scan QR Code"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/rounded_button_minimal"
                android:elevation="0dp"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnEvents"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Browse Events"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/rounded_button_minimal"
                android:elevation="0dp"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnShowHistory"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="My Events"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/bg_button_secondary"
                android:elevation="0dp"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnUpdateProfile"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Update Profile"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/bg_button_secondary"
                android:elevation="0dp" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>

