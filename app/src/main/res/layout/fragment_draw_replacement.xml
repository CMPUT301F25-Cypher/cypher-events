<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/background"
    android:gravity="top|center_horizontal">

    <!-- Top bar: back + title -->
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginBottom="16dp">

        <ImageButton
            android:id="@+id/btnBackReplacement"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_button_secondary"
            android:padding="10dp"
            android:src="@drawable/ic_back_button"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/tvReplacementTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Draw Replacement"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/text_primary"
            android:letterSpacing="-0.02"
            android:paddingStart="12dp" />
    </LinearLayout>

    <!-- Main content -->
    <TextView
        android:id="@+id/tvReplacementSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select a replacement from the waitlist."
        android:textSize="14sp"
        android:textColor="@color/text_secondary" />

    <Button
        android:id="@+id/btnGenerateReplacement"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Draw Replacement"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button_minimal"
        android:elevation="0dp"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/tvReplacementResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No replacement drawn yet"
        android:layout_marginTop="24dp"
        android:textSize="16sp"
        android:textColor="@color/text_primary" />

</LinearLayout>

