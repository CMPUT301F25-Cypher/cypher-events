<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp"
    android:scrollbars="none">

    <LinearLayout
        android:layout_marginTop="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_back_button"
                android:contentDescription="Back" />

            <TextView
                android:id="@+id/tvEventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EV1"
                android:textStyle="bold"
                android:textSize="28sp"
                android:fontFamily="sans-serif-thin"
                android:textColor="#000000"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/tvEventDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event description goes here."
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="16dp" />

        <!-- Event Poster -->
        <ImageView
            android:id="@+id/imgEventPoster"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_placeholder_image"
            android:background="@drawable/ic_placeholder_image_event" />

        <!-- Organizer Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvOrganizerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: John Doe"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvOrganizerPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone: +1 234 567 890"
                android:textSize="16sp"
                android:textColor="#444444"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvOrganizerEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: organizer@example.com"
                android:textSize="16sp"
                android:textColor="#444444" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="24dp" />

        <!-- Buttons Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnGenerateQR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generate QR Code"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button_minimal"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnUpdateEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Event Details"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button_minimal"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnDrawWinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Draw Winner"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button_minimal"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnDrawReplacement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Draw Replacement"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button_minimal"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnViewEntrants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="See List of Entrants"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button_minimal" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
