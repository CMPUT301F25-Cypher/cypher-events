<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/background"
    android:gravity="top|center_horizontal">

    <!-- Top bar: Back + Title -->
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvWinnerTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Draw Winner"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/text_primary"
            android:letterSpacing="-0.02"
            android:paddingStart="12dp" />
    </LinearLayout>

    <!-- Small subtitle -->
    <TextView
        android:id="@+id/tvWinnerSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Randomly select a winner from the waitlist."
        android:textSize="14sp"
        android:textColor="@color/text_secondary" />

    <!-- Draw Winner Button -->
    <Button
        android:id="@+id/btnGenerateWinner"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Draw Winner"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/white"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_button_minimal"
        android:elevation="0dp" />

    <!-- Result display -->
    <TextView
        android:id="@+id/tvWinnerResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No winner drawn yet"
        android:layout_marginTop="24dp"
        android:textSize="16sp"
        android:textColor="@color/text_primary" />

</LinearLayout>

