<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF"
    android:gravity="top|center_horizontal">

    <!-- Top bar: Back + Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnBackWinner"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_back_button"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/tvWinnerTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Draw Winner"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="#000000"
            android:paddingStart="8dp" />
    </LinearLayout>

    <!-- Small subtitle -->
    <TextView
        android:id="@+id/tvWinnerSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose a winner from the waitlist or draw at random."
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginTop="16dp" />

    <!-- Draw Winner Button -->
    <Button
        android:id="@+id/btnGenerateWinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Winner"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_button_minimal" />

    <!-- Result display -->
    <TextView
        android:id="@+id/tvWinnerResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Winner: (not drawn yet)"
        android:layout_marginTop="24dp"
        android:textSize="16sp"
        android:textColor="#333333" />

</LinearLayout>
